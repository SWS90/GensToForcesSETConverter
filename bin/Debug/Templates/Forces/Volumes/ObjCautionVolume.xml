<?xml version="1.0" encoding="utf-8"?>
<Template>
  <Shape type="byte" description="The shape of this volume.">
	<Enum description="Box" value="0" />
	<Enum description="Sphere" value="1" />
	<Enum description="Cylinder" value="2" />
  </Shape>
	
  <Width type="float" description="The width of this volume." />
  <Height type="float" description="The height of this volume." />
  <Depth type="float" description="The depth of this volume." />
	
  <HideIfInput type="bool" description="Whether the on-screen buttons should hide if the player presses them?" />
  <CautionType type="byte" description="What type of symbol to display.">
	<Enum description="None" value="255" />
	<Enum description="Exclamation" value="0" />
	<Enum description="Quick Step" value="1" />
	<Enum description="Drift" value="2" />
  </CautionType>
  
  <NaviType type="byte" description="What type of buttons to display.">
	<Enum description="None" value="0" />
    <Enum description="Jump" value="1" />
    <Enum description="Slide" value="2" />
    <Enum description="Boost" value="3" />
    <Enum description="Wispon R" value="4" />
    <Enum description="Wispon L" value="5" />
    <Enum description="Quickstep Both" value="6" />
    <Enum description="Quickstep Left" value="7" />
    <Enum description="Quickstep Right" value="8" />
    <Enum description="Homing Attack" value="9" />
    <Enum description="Stomp" value="10" />
    <Enum description="Spin Dash" value="11" />
    <Enum description="Grind Rail Switch" value="12" />
    <Enum description="Baddy Change" value="13" />
  </NaviType>
  
  <IsSwitch type="bool" description="TODO" />
  <Extra type="description" value="Volumes which trigger buttons to appear on-screen (indicating that the player needs to press them), or a caution symbol, like in Sonic Colors." />
  <Extra type="RawByteLength" length="20" />
</Template>