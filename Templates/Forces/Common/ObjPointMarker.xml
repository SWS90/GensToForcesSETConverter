<?xml version="1.0" encoding="utf-8"?>
<Template>
  <Width type="float" default="50" description="How wide the space is between the point markers." />
  <Height type="float" default="50" description="How tall the invisible checkpoint trigger is." />
  <Type type="enum" default="0" description="What type of checkpoint this is.">
	<Enum description="3D" value="0" />
	<Enum description="2D" value="1" />
	<Enum description="2D Reversed" value="2" />
  </Type>
  
  <Extra type="model" value="cmn_obj_pointmarkerR.model" condition="Type == 0" />
  <Extra type="model" value="cmn_obj_pointmarkerSV.model" condition="Type == 1" />
  <Extra type="description" value="Checkpoints" />
  <Extra type="RawByteLength" length="12" />
</Template>